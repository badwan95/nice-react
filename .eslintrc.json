{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 11,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "no-console": "off",
        "indent": [ "error", 2 ],
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "comma-dangle": ["error", "always-multiline"],
        "semi": [ "error", "always" ],
        "no-unused-vars": [1, {"vars": "local", "args": "none"}]
    }
}
